---
import Image from 'astro/components/Image.astro';
import AnchorLink from '../library/AnchorLink.astro';
import LinkOut from '../icons/Icons/LinkOut.astro';

const { greeting, description, buttonText, buttonUrl } = Astro.props;
---

<section class="w-11/12 max-w-2xl mx-auto flex flex-col items-center justify-center my-36">
    <Image
        src="https://res.cloudinary.com/dx2mmidgs/image/upload/v1757729658/jenner_acosta.png"
        alt="Jenner Acosta DÃ­az"
        width={150}
        height={150}
        class="rounded-full"
        loading="eager"
    />
    <p class="text-small font-light my-4">{greeting}</p>
    <h1
        class="text-4xl font-light text-center bg-gradient-to-r from-neutral-300 to-neutral-700 inline-block text-transparent bg-clip-text"
    >
        {description}
    </h1>
    <AnchorLink href={buttonUrl} class="mt-10 flex items-center gap-2">
        {buttonText}
        <LinkOut size="xs" />
    </AnchorLink>
</section>
