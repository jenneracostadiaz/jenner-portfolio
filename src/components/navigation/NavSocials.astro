---
import Github from '../icons/Icons/Github.astro';
import Linkedin from '../icons/Icons/Linkedin.astro';
import Instagram from '../icons/Icons/Instagram.astro';
import Youtube from '../icons/Icons/Youtube.astro';

import { SITE_SOCIAL } from '../../consts';
import Icon from '../icons/Icon.astro';

const socials = [
    {
        name: 'Github',
        url: SITE_SOCIAL.github,
        icon: Github,
    },
];

const socialIcons = {
    github: Github,
    linkedin: Linkedin,
    instagram: Instagram,
    youtube: Youtube,
};

const socialLinks = Object.entries(SITE_SOCIAL).map(([key, value]) => ({
    name: key,
    url: value,
    icon: socialIcons[key as keyof typeof socialIcons],
}));
---

<div class="flex items-center gap-4">
    {
        socialLinks.map(({ name, url, icon: Icon }) => (
            <a href={url} title={name} target="_blank" rel="noopener noreferrer">
                <Icon />
            </a>
        ))
    }
</div>
