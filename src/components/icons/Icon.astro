---
// src/components/icons/Icon.astro
export interface Props {
  name: string;
  size?: number | string;
  class?: string;
  strokeWidth?: number;
}

const { 
  size = 24,
  strokeWidth = 0,
  class: className = "fill-neutral-300",
  ...rest
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox={`0 0 ${size} ${size}`}
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  class:list={["icon", className]}
  {...rest}
>
  <slot />
</svg>

<style>
  .icon {
    flex-shrink: 0;
    transition: all 0.2s ease;
  }
</style>