---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'button'> & {
    variant?: 'default' | 'outline';
    type?: 'button' | 'submit' | 'reset';
};

const { class: className, variant = 'default', type = 'button', ...props } = Astro.props;

const variants = {
    default:
        'text-xs font-light py-4 px-8 bg-neutral-800 rounded shadow-xl hover:bg-neutral-700/50 transition-all duration-300',
    outline:
        'text-xs font-light py-4 px-6 border border-neutral-800 rounded shadow-xl hover:border-neutral-700 hover:text-neutral-100 transition-all duration-300',
};
---

<button type={type} class:list={[variants[variant], className]} {...props}>
    <slot />
</button>
