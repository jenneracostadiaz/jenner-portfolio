---
import Image from 'astro/components/Image.astro';
import type { GalleryImage } from '../../types/portfolio';

interface Props {
    images: GalleryImage[];
    title: string;
}

const { images, title } = Astro.props;
---

<section id="gallery" class="grid gap-4 pt-4">
    {
        images.map((image, index) => (
            <div class="image-container relative overflow-hidden rounded-xl">
                <Image
                    src={image.imageUrl}
                    alt={image.alt || `${title} imagen ${index + 1}`}
                    width={1152}
                    height={648}
                    class="rounded-xl"
                    loading="lazy"
                />
                <div class="absolute bottom-0 w-full bg-black bg-opacity-60 p-2 text-white text-sm">
                    {image.alt}
                </div>
            </div>
        ))
    }
</section>